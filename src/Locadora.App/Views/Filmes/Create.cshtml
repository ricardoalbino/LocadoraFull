@model Locadora.Domain.Models.Filme


    <div class="card">
        <div class="card-header" style="background-color:mediumseagreen">
            <div class="float-left">
                <h6>Filme</h6>
            </div>
        </div>

        <div class="card-body">

            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Genero" class="control-label"></label>
                            <input asp-for="Genero" class="form-control" />
                            <span asp-validation-for="Genero" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Data Lançamento</label>
                            <input asp-for="DataLançamento" class="form-control" />
                            <span asp-validation-for="DataLançamento" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label  class="control-label">Valor Locação</label>
                            <input asp-for="ValorLocacao" class="form-control" />
                            <span asp-validation-for="ValorLocacao" class="text-danger"></span>
                        </div>

                   



                        <div class="form-group ">
                            <a class="btn btn-success" asp-action="Index">Voltar</a>
                            &nbsp;

                            <input type="submit" value="Create" class="btn btn-success" />
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
